<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane minHeight="182.0" minWidth="226.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sio.gestionticket.LoginController">
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="90.0" text="Login" />
                  <TextField fx:id="txtLogin" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label minWidth="90.0" text="Mot de passe" />
                  <PasswordField fx:id="txtMotDePasse" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label fx:id="txtErreur" alignment="CENTER" maxWidth="Infinity" minHeight="25.0" style="-fx-border-color: blue;" VBox.vgrow="NEVER" />
            <Button fx:id="btnConnexion" maxWidth="Infinity" mnemonicParsing="false" onMouseClicked="#btnConnexionClicked" text="Se connecter" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>